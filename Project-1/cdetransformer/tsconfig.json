{
  "compilerOptions": {
    "target": "ES2020",                          
    "module": "CommonJS",                       
    "lib": ["ES2020"],                           
    "outDir": "./dist",                          
    "rootDir": "./src",                         
    "strict": true,                              
    "esModuleInterop": true,                     
    "forceConsistentCasingInFileNames": true,    
    "skipLibCheck": true,                       
    "resolveJsonModule": true,                   
    "moduleResolution": "node",                
    "sourceMap": true,                           
    "noImplicitAny": true                        
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}